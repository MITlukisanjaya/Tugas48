{% include 'templates/header.twig' %}
{% block content %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
          <a class="bg-deep-orange btn" href="create">Tambah Data Baru</a>
        </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    {{title}}
                </h2>
            </div>
            <div class="body">
                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                    <thead>
                        <tr>
                        <th>Nim</th>
                        <th>Nama</th>
                        <th>Tempat, Tanggal Lahir</th>
                        <th>Alamat</th>
                        <th>Create_at</th>
                        <th>Updated_at</th>
                        <th>Deleted</th>
                        <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for mahasiswa in mahasiswa %}
                    <tr>
                        <td>{{ mahasiswa.nim|e }}</td>
                        <td>{{ mahasiswa.nama|e }}</td>
                        <td>{{ mahasiswa.tempat_lahir|e }}, {{ mahasiswa.tanggal_lahir|e }}</td>
                        <td>{{ mahasiswa.alamat|e }}</td>
                        <td>{{ mahasiswa.created_at|e }}</td>
                        <td>{{ mahasiswa.updated_at|e }}</td>
                        <td>{{ mahasiswa.deleted|e }}</td>
                        <td><a class="btn bg-light-blue" href="edit/{{ mahasiswa.id|e }}">Edit</a> <a class="btn bg-red">Hapus</a></td>
                    <tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
{% include 'templates/footer.twig' %}
